{
  "private": "true",
  "name": "realm-monorepo",
  "workspaces": [
    "app",
    "lib/multiplayer",
    "playground/ui"
  ],
  "scripts": {
    "start": "yarn workspace @holium/realm start",
    "add:realm": "yarn workspace @holium/realm add",
    "package:realm": "yarn workspace @holium/realm package",
    "build": "yarn build:multiplayer && yarn build:playground && yarn build:app",
    "build:realm": "yarn workspace @holium/playground build",
    "build:playground": "yarn workspace @holium/playground build",
    "build:multiplayer": "yarn workspace @holium/realm-multiplayer build"
  }
}
