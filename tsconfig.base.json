{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "disableSizeLimit": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "es2021"
    ],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "es2021",
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "**/app/src/renderer/index.ejs"
  ],
  "references": [
    {
      "path": "./app"
    },
    {
      "path": "./shared"
    },
    {
      "path": "./holium-com"
    },
    {
      "path": "./hosting-holium-com"
    },
    {
      "path": "./join-holium-com"
    },
    {
      "path": "./web-holium-com"
    },
    {
      "path": "./lib/design-system"
    },
    {
      "path": "./lib/presence"
    },
    {
      "path": "./lib/presence/code"
    },
    {
      "path": "./lib/room"
    },
    {
      "path": "./lib/room/test-ui"
    },
    {
      "path": "./lexicon"
    },
    {
      "path": "./trove"
    }
  ]
}